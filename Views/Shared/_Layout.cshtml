<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - نظام إدارة الحجز</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Tahoma', sans-serif;
        }

        nav.navbar {
            background: linear-gradient(90deg, #007bff, #00c6ff);
        }

            nav.navbar .navbar-brand {
                font-weight: bold;
                font-size: 1.3rem;
            }

            nav.navbar a.nav-link {
                color: white !important;
                font-weight: bold;
                transition: 0.3s;
            }

                nav.navbar a.nav-link:hover {
                    text-decoration: underline;
                }

        footer {
            margin-top: 40px;
            padding: 15px;
            background-color: #e9ecef;
            text-align: center;
            font-size: 14px;
            border-top: 2px solid #ddd;
        }

        .content-wrapper {
            padding-top: 20px;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg shadow">
        <div class="container">
            <a class="navbar-brand text-white" href="/Dashboard/Index">🏠 نظام الحجز</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a href="/Dashboard/Index" class="nav-link">📊 لوحة التحكم</a>
                    </li>
                    <li class="nav-item">
                        <a href="/Unit/Index" class="nav-link">🏡 الوحدات</a>
                    </li>
                    <li class="nav-item">
                        <a href="/Booking/Index" class="nav-link">📅 الحجوزات</a>
                    </li>
                    <li class="nav-item">
                        <a href="/Expense/Index" class="nav-link">💰 المصاريف</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Content -->
    <div class="container content-wrapper">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer>
        &copy; @DateTime.Now.Year - جميع الحقوق محفوظة | نظام إدارة الحجز
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>

@model IEnumerable<ProjectName.Models.Unit>

<h2 class="mb-4 text-primary">🏠 الوحدات المتاحة</h2>

<!-- فلتر البحث -->
<div class="mb-4 d-flex flex-wrap gap-2 align-items-center">
    <form method="get" class="d-flex flex-wrap gap-2 align-items-center">
        <input type="text" name="search" class="form-control form-control-sm" placeholder="ابحث باسم الوحدة..." value="@Context.Request.Query["search"]" style="min-width:200px;" />
        <button type="submit" class="btn btn-primary btn-sm">🔍 بحث</button>
        <a href="/Unit/Index" class="btn btn-outline-secondary btn-sm">🗑 إلغاء التصفيه</a>
    </form>

    <form method="get" class="d-flex flex-wrap gap-2 align-items-center mt-2">
        <input type="date" name="startDate" class="form-control form-control-sm" value="@Context.Request.Query["startDate"]" />
        <input type="date" name="endDate" class="form-control form-control-sm" value="@Context.Request.Query["endDate"]" />
        <button type="submit" class="btn btn-success btn-sm">📅 عرض المتاح</button>
        <a href="/Unit/Index" class="btn btn-outline-secondary btn-sm">🗑 إلغاء</a>
    </form>
</div>

<a href="/Unit/Create" class="btn btn-success mb-3">➕ إضافة وحدة جديدة</a>

<div class="row g-4">
    @foreach (var unit in Model)
    {
        <div class="col-md-4 col-sm-6">
            <div class="card h-100 shadow-sm border-0">
                <img src="@unit.ImagePath" class="card-img-top" style="height:180px; object-fit:cover; border-radius: 5px 5px 0 0;">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title text-truncate" title="@unit.Name">@unit.Name</h5>
                    <p class="text-muted text-truncate" title="@unit.Description">@unit.Description</p>
                    <p class="mb-2"><strong>السعر:</strong> @unit.PricePerNight ج.م / الليلة</p>
                    <p class="mb-3">
                        <span class="badge @(unit.IsAvailable ? "bg-success" : "bg-danger") px-2 py-1">
                            @(unit.IsAvailable ? "متاح" : "محجوز")
                        </span>
                    </p>
                    <div class="mt-auto d-flex justify-content-between flex-wrap gap-2">
                        <a href="/Unit/Details/@unit.UnitId" class="btn btn-primary btn-sm flex-fill">📄 التفاصيل</a>
                        <a href="/Unit/Edit/@unit.UnitId" class="btn btn-warning btn-sm flex-fill">✏ تعديل</a>
                        <a href="/Unit/Delete/@unit.UnitId" class="btn btn-danger btn-sm flex-fill">🗑 حذف</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
